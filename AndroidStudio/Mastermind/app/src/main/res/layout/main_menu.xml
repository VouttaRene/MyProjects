<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainMenu">

    <Button
        android:id="@+id/button_startGame"
        android:layout_width="201dp"
        android:layout_height="82dp"
        android:layout_marginStart="105dp"
        android:layout_marginTop="146dp"
        android:layout_marginEnd="105dp"
        android:layout_marginBottom="30dp"
        android:text="Start Game"
        app:layout_constraintBottom_toTopOf="@+id/button_gameRules"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_gameRules"
        android:layout_width="201dp"
        android:layout_height="82dp"
        android:layout_marginStart="105dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="105dp"
        android:layout_marginBottom="30dp"
        android:text="Settings"
        app:layout_constraintBottom_toTopOf="@+id/button_Undecided"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_startGame"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/button_Undecided"
        android:layout_width="201dp"
        android:layout_height="82dp"
        android:layout_marginStart="105dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="105dp"
        android:layout_marginBottom="258dp"
        android:text="Other"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_gameRules"
        tools:ignore="MissingConstraints" />

</android.support.constraint.ConstraintLayout>